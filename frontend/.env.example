# ============================================
# IVIE Wedding Studio - Frontend Environment
# ============================================
# Copy this file to .env and fill in your values

# ================== API CONNECTION ==================
# Backend API URL (Development)
VITE_API_BASE_URL=http://localhost:8000

# Backend API URL (Production - Render)
# VITE_API_BASE_URL=https://ivie-backend.onrender.com

# ================== FIREBASE (Social Login) ==================
# Get these from Firebase Console > Project Settings > Web App
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ================== ANALYTICS (Optional) ==================
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# ================== FEATURE FLAGS ==================
# Enable/disable features
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_REVIEWS=true

# ================== BUILD ==================
# Node environment
NODE_ENV=development
