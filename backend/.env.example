# ============================================
# IVIE Wedding Studio - Backend Environment
# ============================================
# Copy this file to .env and fill in your values

# ================== DATABASE ==================
# SQLite (Development)
DATABASE_URL=sqlite:///./ivie.db

# PostgreSQL (Production - Render)
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# ================== SECURITY ==================
SECRET_KEY=your_super_secret_key_change_this_in_production_2024

# ================== CORS ==================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend.onrender.com

# ================== EMAIL (Gmail SMTP) ==================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
NOTIFY_RECEIVER_EMAIL=admin@yourdomain.com

# ================== TELEGRAM BOT ==================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ================== IMAGE UPLOAD ==================
# ImgBB API (Free image hosting)
IMGBB_API_KEY=your_imgbb_api_key

# ================== SERVER ==================
PORT=8000
PYTHON_VERSION=3.12
